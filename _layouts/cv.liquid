---
layout: default
---
<div class="post">
  <header class="post-header text-center my-4">
    <h1 class="post-title">{{ page.title }}</h1>
    {% if page.cv_pdf %}
      <a 
        href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}" 
        target="_blank" 
        rel="noopener noreferrer" 
        class="btn btn-primary btn-lg">
        <i class="fa-solid fa-file-pdf"></i> Download CV
      </a>
    {% endif %}
  </header>

  <article>
    
    <div class="cv text-center mb-4">
      {% if page.cv_pdf %}
        <iframe 
          src="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}" 
          width="100%" 
          style="border: none; height: calc(100vh - 150px);">
          Your browser does not support PDF previews. Please 
          <a href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}">download the CV</a>.
        </iframe>
    {% else %}
      <p>No CV available to preview. Please check back later.</p>
    {% endif %}
  </div>

  </article>
</div>
